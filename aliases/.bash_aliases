# [general]

alias ls='ls --color=auto'
alias ll='ls -alF'
alias la='ls -A'
alias l='ls -CF'
alias grep='grep --color=auto'


# [navigation]

alias ..='cd ..'
alias ...='cd ../..'
alias 'cd..'='cd ..'


# [git]

alias gs='git status'
alias ga='git add'
alias gc='git commit'
alias gd='git diff'


# [tmux]
alias tm='tmux'
alias ta='tmux attach'


# [conda]

alias act='conda activate'
alias dct='conda deactivate'


# [other application]

alias duckdb='$HOME/duckdb'