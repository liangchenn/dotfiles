--     
--           Packages
--

-- lazy-nvim
local lazypath = vim.fn.stdpath("data") .. "/lazy/lazy.nvim"
if not (vim.uv or vim.loop).fs_stat(lazypath) then
  vim.fn.system({
    "git",
    "clone",
    "--filter=blob:none",
    "https://github.com/folke/lazy.nvim.git",
    "--branch=stable", -- latest stable release
    lazypath,
  })
end
vim.opt.rtp:prepend(lazypath)

-- file tree
local nvim_tree_plugin = {
    "nvim-tree/nvim-tree.lua",
    version = "*",
    dependencies = {"nvim-tree/nvim-web-devicons"},
    config = function()
        require("nvim-tree").setup {}
    end
}
-- status bar
local lualine_plugin = {
    'nvim-lualine/lualine.nvim',
    config = function()
        require('lualine').setup()
    end
}
-- lsp
local lsp = {
    'neovim/nvim-lspconfig',
	config = function()
			require'lspconfig'.pyright.setup{}
    end
}
-- neo-tree
local neo_tree = {
    "nvim-neo-tree/neo-tree.nvim",
    branch = "v3.x",
    dependencies = {
      "nvim-lua/plenary.nvim",
      "nvim-tree/nvim-web-devicons", -- not strictly required, but recommended
      "MunifTanjim/nui.nvim",
      -- "3rd/image.nvim", -- Optional image support in preview window: See `# Preview Mode` for more information
    }
}




-- packages
require("lazy").setup({
  {"nvim-treesitter/nvim-treesitter", build = ":TSUpdate"},
  { "catppuccin/nvim", name = "catppuccin", priority = 1000 },
  {"folke/tokyonight.nvim", lazy = false, priority = 1000, opts = {}},
  nvim_tree_plugin, lualine_plugin,
  lsp,
  nvimcmp,
  neo_tree,
  {"hrsh7th/nvim-cmp"},  -- 主要的自動完成引擎
  {"hrsh7th/cmp-buffer"},  -- 從緩衝區提供自動完成
  {"hrsh7th/cmp-path"},  -- 路徑完成
  {"hrsh7th/cmp-nvim-lsp"},  -- LSP 自動完成
  {"hrsh7th/cmp-nvim-lua"},  -- Neovim Lua API 自動完成
  {"saadparwaiz1/cmp_luasnip"},  -- 片段支持
  {"L3MON4D3/LuaSnip"},  -- 片段引擎
  {"onsails/lspkind-nvim"},  -- 美化自動完成菜單
  {
        "neovim/nvim-lspconfig",  -- LSP 配置支持
        config = function()
            require("lspconfig").pyright.setup{}  -- 使用 Pyright 為 Python 設定 LSP
        end
  },
  { "karb94/neoscroll.nvim" },
  { "lewis6991/gitsigns.nvim",
    config = function()
      require("gitsigns").setup()
    end,
  },
  { 'RRethy/vim-illuminate' },
})
